{
  
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "paths": {
      "features/*": ["src/features/*"],
      "config/*": ["src/config/*"],
      "common/*": ["src/common/*"],
      "utils/*": ["src/utils/*"]
